<!-- 
  File for the Maven Assembly plug-in.
 	Takes the dependency file (prepared by deps.xml) and adds a few other files to the final distribution package. 
 -->
<assembly>
  <id>pkg</id>
 
  <formats>
    <format>zip</format>
  </formats>

  <fileSets>

		<fileSet>
			<directory>src/main</directory>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
      </includes>
      <fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>      
			<outputDirectory></outputDirectory>
			<filtered>true</filtered>
		</fileSet>

<!--		<fileSet>-->
<!--			<directory>src/main/resources</directory>-->
<!--      <includes>-->
<!--        <include>log4j.properties</include>-->
<!--      </includes>-->
<!--      <fileMode>0644</fileMode>-->
<!--			<directoryMode>0755</directoryMode>-->
<!--			<outputDirectory></outputDirectory>-->
<!--			<filtered>true</filtered>-->
<!--		</fileSet>-->

		<fileSet>
			<directory>src/main/assembly/resources</directory>
      <excludes>
        <!-- Defined below, with x permissions, non-executables only here -->
        <exclude>**/*.sh</exclude>
      </excludes>  
      <fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>      
			<outputDirectory></outputDirectory>
			<filtered>true</filtered>
		</fileSet>

		<fileSet>
			<directory>src/main/assembly/resources</directory>
      <includes>
        <include>**/*.sh</include>
      </includes>  
      <fileMode>0755</fileMode>
			<directoryMode>0755</directoryMode>      
			<outputDirectory></outputDirectory>
			<filtered>true</filtered>
		</fileSet>



